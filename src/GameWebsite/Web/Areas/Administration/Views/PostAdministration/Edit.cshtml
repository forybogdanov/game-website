@using GameWebsite.Service.Models.Posts
@{
    Layout = "../Shared/_AdminLayout";
}
@model PostDto
<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>

<body>
  <h2>Edit Post</h2>
    <form asp-area="Administration" asp-controller="PostAdministration" asp-action="Edit" asp-route-id="@(Model.Id)" method="post">
      <div class="form-group">
        <label asp-for="Name" for="name">Name</label>
        <input asp-for="Name" type="text" class="form-control mb-3" id="name" placeholder="Name...">
      </div>
      <div class="form-group">
        <label asp-for="Content" for="description">Content</label>
        <input asp-for="Content" type="text" class="form-control mb-3" id="description" placeholder="Description...">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</body>
</html>