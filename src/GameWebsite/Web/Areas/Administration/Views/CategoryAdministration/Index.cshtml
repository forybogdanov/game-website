@using GameWebsite.Service.Models.Categories
@{
    Layout = "../Shared/_AdminLayout";
}
@model IQueryable<CategoryDto>

<!DOCTYPE html>
<html lang="en">

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>

<body>
    <h1>Categories Panel</h1>
    <ul class="nav">
    <li class="nav-item">
        <a class="nav-link" asp-area="Administration" asp-controller="CategoryAdministration" asp-action="Create">Create category</a>
    </li>
    </ul>
    <table class="table">
    <thead>
      <tr>
        <th scope="col">Category Id</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">See posts</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
        @foreach(CategoryDto category in Model) {
          <tr>
            <th scope="row">@(category.Id)</th>
            <td>@(category.Name)</td>
            <td>@(category.Description)</td>
            <td><a class="btn btn-primary" asp-area="Administration" asp-controller="PostAdministration" asp-action="Index" asp-route-id="@category.Id">See posts</a></td>
            <td><a class="btn btn-primary" asp-area="Administration" asp-controller="CategoryAdministration" asp-action="Edit" asp-route-id="@category.Id">Edit</a></td>
            <td><a class="btn btn-primary" asp-area="Administration" asp-controller="CategoryAdministration" asp-action="Delete" asp-route-id="@category.Id">Delete</a></td>
          </tr>
        }
    </tbody>
  </table>
</body>
</html>
